<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FITECH"
        tools:targetApi="31">
        <activity
            android:name=".ui.activitys.SobreOAppActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activitys.FormEsqueceuSuaSenhaActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activitys.CalculadoraTMBActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activitys.ExercicioDetailedActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activitys.ListExerciciosSubListActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activitys.ListExerciciosActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activitys.TelaHistoricoDeCalculosActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activitys.CalculadoraIMCActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activitys.TelaPrincipalActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activitys.FormCadastroActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activitys.FormLoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="API_KEY"
            android:value="${API_KEY}" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>