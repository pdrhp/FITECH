<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.calculadoratmb.calculadoratmb">

    <!-- Frame Header e Logo -->

    <View
        android:id="@+id/frameHeaderCalculadoraTMB"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/btn1" />

    <TextView
        android:id="@+id/logoFITECH_CalculadoraTMB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/khand_bold"
        android:text="@string/app_name"
        android:textSize="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line_1"
        android:layout_width="68dp"
        android:layout_height="2dp"
        android:layout_marginLeft="-70dp"
        android:layout_marginTop="-18dp"
        android:background="@drawable/line_1"
        app:layout_constraintStart_toEndOf="@id/logoFITECH_CalculadoraTMB"
        app:layout_constraintTop_toBottomOf="@+id/logoFITECH_CalculadoraTMB" />

    <!-- Botao Voltar -->

    <View
        android:id="@+id/iconButtonVoltarTelaTMB"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/backwards_arrow"
        app:layout_constraintStart_toStartOf="@id/frameHeaderCalculadoraTMB"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/frameHeaderCalculadoraTMB"
        android:layout_marginLeft="10dp"
        />

    <!-- Titulo -->

    <TextView
        android:id="@+id/titleTMB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TMB_title"
        android:textSize="60dp"
        android:fontFamily="@font/khand_bold"
        app:layout_constraintTop_toBottomOf="@id/frameHeaderCalculadoraTMB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!-- Input Idade -->

    <EditText
        android:id="@+id/inputIdadeTBM"
        android:layout_width="310dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/titleTMB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="50dp"
        android:background="@drawable/btn5"
        android:hint="@string/idade_PlaceHolder"
        android:fontFamily="@font/khand_medium"
        android:paddingLeft="10dp"
        android:inputType="number"
        />

    <View
        android:id="@+id/frameIconIdadeTMB"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/btn4"
        app:layout_constraintBottom_toBottomOf="@id/inputIdadeTBM"
        app:layout_constraintEnd_toStartOf="@id/inputIdadeTBM"
        />

    <View
        android:id="@+id/iconInputIdadeTMB"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:background="@drawable/icon_idade"
        app:layout_constraintStart_toStartOf="@id/frameIconIdadeTMB"
        app:layout_constraintEnd_toEndOf="@id/frameIconIdadeTMB"
        app:layout_constraintBottom_toBottomOf="@id/frameIconIdadeTMB"
        app:layout_constraintTop_toTopOf="@id/frameIconIdadeTMB"
        />

    <!-- Input Genero -->

    <Spinner
        android:id="@+id/inputGeneroTBM"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:background="@drawable/btn5"
        app:layout_constraintTop_toBottomOf="@id/inputIdadeTBM"
        app:layout_constraintStart_toStartOf="@id/inputIdadeTBM"
        android:layout_marginTop="30dp"
        android:paddingLeft="10dp"
        />

    <View
        android:id="@+id/frameIconGenderTBM"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/btn4"
        app:layout_constraintBottom_toBottomOf="@id/inputGeneroTBM"
        app:layout_constraintEnd_toStartOf="@id/inputGeneroTBM"
        />

    <View
        android:id="@+id/iconInputGenderTBM"
        android:layout_width="28.8dp"
        android:layout_height="30.28dp"
        android:background="@drawable/icon_gender"
        app:layout_constraintStart_toStartOf="@id/frameIconGenderTBM"
        app:layout_constraintEnd_toEndOf="@id/frameIconGenderTBM"
        app:layout_constraintBottom_toBottomOf="@id/frameIconGenderTBM"
        app:layout_constraintTop_toTopOf="@id/frameIconGenderTBM"
        />

    <!-- Input Peso -->

    <EditText
        android:id="@+id/inputPesoTBM"
        android:layout_width="310dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/inputGeneroTBM"
        app:layout_constraintStart_toStartOf="@id/inputGeneroTBM"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn5"
        android:hint="@string/Peso_PlaceHolder"
        android:fontFamily="@font/khand_medium"
        android:paddingLeft="10dp"
        android:inputType="number"
        />

    <View
        android:id="@+id/frameIconPesoTBM"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/btn4"
        app:layout_constraintBottom_toBottomOf="@id/inputPesoTBM"
        app:layout_constraintEnd_toStartOf="@id/inputPesoTBM"
        />

    <View
        android:id="@+id/iconInputPesoTBM"
        android:layout_width="34.3dp"
        android:layout_height="20.64dp"
        android:background="@drawable/icon_inputpesoimc"
        app:layout_constraintStart_toStartOf="@id/frameIconPesoTBM"
        app:layout_constraintEnd_toEndOf="@id/frameIconPesoTBM"
        app:layout_constraintBottom_toBottomOf="@id/frameIconPesoTBM"
        app:layout_constraintTop_toTopOf="@id/frameIconPesoTBM"
        />

    <!-- Input Altura -->

    <EditText
        android:id="@+id/inputAlturaTBM"
        android:layout_width="310dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/inputPesoTBM"
        app:layout_constraintStart_toStartOf="@id/inputPesoTBM"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn5"
        android:hint="@string/Altura_PlaceHolder"
        android:fontFamily="@font/khand_medium"
        android:paddingLeft="10dp"
        android:inputType="number"
        />

    <View
        android:id="@+id/frameIconAlturaTBM"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/btn4"
        app:layout_constraintBottom_toBottomOf="@id/inputAlturaTBM"
        app:layout_constraintEnd_toStartOf="@id/inputAlturaTBM"
        />

    <View
        android:id="@+id/iconInputAlturaTBM"
        android:layout_width="28.8dp"
        android:layout_height="30.28dp"
        android:background="@drawable/icon_altura"
        app:layout_constraintStart_toStartOf="@id/frameIconAlturaTBM"
        app:layout_constraintEnd_toEndOf="@id/frameIconAlturaTBM"
        app:layout_constraintBottom_toBottomOf="@id/frameIconAlturaTBM"
        app:layout_constraintTop_toTopOf="@id/frameIconAlturaTBM"
        />

    <!-- Input Nivel De Atividade Fisica -->

    <Spinner
        android:id="@+id/inputNvAtvFisTBM"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:background="@drawable/btn5"
        app:layout_constraintTop_toBottomOf="@id/inputAlturaTBM"
        app:layout_constraintStart_toStartOf="@id/inputAlturaTBM"
        android:layout_marginTop="30dp"
        android:paddingLeft="10dp"
        />

    <View
        android:id="@+id/frameIconNvAtvFisTBM"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/btn4"
        app:layout_constraintBottom_toBottomOf="@id/inputNvAtvFisTBM"
        app:layout_constraintEnd_toStartOf="@id/inputNvAtvFisTBM"
        />

    <View
        android:id="@+id/iconInputNvAtvFisTBM"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:background="@drawable/icon_nvatvfis"
        app:layout_constraintStart_toStartOf="@id/frameIconNvAtvFisTBM"
        app:layout_constraintEnd_toEndOf="@id/frameIconNvAtvFisTBM"
        app:layout_constraintBottom_toBottomOf="@id/frameIconNvAtvFisTBM"
        app:layout_constraintTop_toTopOf="@id/frameIconNvAtvFisTBM"
        />

    <!-- Button Calcular -->


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonCalcularTBM"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:background="@drawable/btn1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inputNvAtvFisTBM"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/khand_medium"
        android:text="@string/text_button_Calcular"
        android:textSize="28dp"
        />

    <!-- Container Resultado -->

    <View
        android:id="@+id/container_Label_Resultado"
        android:layout_width="360dp"
        android:layout_height="30dp"
        android:background="@drawable/container_resultado_upper_part_style"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonCalcularTBM"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:id="@+id/textViewLabelResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/container_Label_Resultado"
        app:layout_constraintBottom_toBottomOf="@id/container_Label_Resultado"
        app:layout_constraintStart_toStartOf="@id/container_Label_Resultado"
        app:layout_constraintEnd_toEndOf="@id/container_Label_Resultado"
        android:text="@string/label_container_calcular"
        android:fontFamily="@font/khand_medium"
        android:textSize="20dp"
        />

    <View
        android:id="@+id/container_resultado_TMB"
        android:layout_width="360dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/container_Label_Resultado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/container_resultado_under_part_style"
        />

    <TextView
        android:id="@+id/textViewResultadoTMB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/container_resultado_TMB"
        app:layout_constraintBottom_toBottomOf="@id/container_resultado_TMB"
        app:layout_constraintLeft_toLeftOf="@id/container_resultado_TMB"
        app:layout_constraintRight_toRightOf="@id/container_resultado_TMB"
        android:fontFamily="@font/khand_medium"
        android:textSize="25dp"
        />


    <!-- Footer -->

    <View
        android:id="@+id/frameFooterCalculadoraIMC"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/btn1" />



</androidx.constraintlayout.widget.ConstraintLayout>